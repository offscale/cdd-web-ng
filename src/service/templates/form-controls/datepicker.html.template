<mat-form-field>
  <mat-label>{{label}}</mat-label>
  <input matInput [matDatepicker]="picker{{propertyName}}_id" formControlName="{{propertyName}}">
  <mat-datepicker-toggle matSuffix [for]="picker{{propertyName}}_id"></mat-datepicker-toggle>
  <mat-datepicker #picker{{propertyName}}_id></mat-datepicker>
  @if (form.get('{{propertyName}}')?.hasError('required')) {
    <mat-error>This field is required.</mat-error>
  }
</mat-form-field>